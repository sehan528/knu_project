      // console.log(store); // ejs render ëœ ê°’ì´ ì—†ë‹¤ë©´ yes24.
  
      window.onload = function () {
        const dataSize = "<%= data ? data.length : 0 %>";
        const data = JSON.parse('<%- JSON.stringify(data) %>');
        // const now_store = "ì˜ˆìŠ¤24";
