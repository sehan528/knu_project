<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>중고 서적</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

  <style>
    .main {
      width: 85%;
      margin: 20px auto;
    }

    .has-search .form-control {
      height: 45px;
      padding-left: 2.375rem;
      font-size: 15px;
      border-radius: 15px;
      padding-left: 10px;
      color: aliceblue;
    }

    .has-search .form-control-feedback {
      position: absolute;
      z-index: 2;
      display: block;
      width: 2.375rem;
      height: 2.375rem;
      line-height: 2.375rem;
      text-align: center;
      pointer-events: none;
      color: #aaa;
    }

    .form-button-feedback {
      position: absolute;
      z-index: 2;
      display: block;
      width: 2.375rem;
      height: 2.375rem;
      line-height: 2.375rem;
      text-align: center;
      pointer-events: none;
      color: #aaa;
    }

    .form-control {
      margin: 10px auto;
      height: 100px;
      padding-left: 10px;
      color: aliceblue;
    }

    .list-group-data {
      cursor: pointer;
    }
  </style>
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous">
  </script> -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
</head>

<body class="bg-dark">

  <%- include('nav2.html') %>

  <div class="main" style="min-width:400px;" align="center">

    <div class="form-group has-search" style="max-width: 400px;">
      <input type="text" id="searchBook" class="form-control bg-dark" placeholder="Search">
    </div>

    <% for (var i=0; i < posts.length; i ++) { %>
      <div class="border border-white " style="max-width: 400px; margin: 10px auto;" 
      onclick="location.href='/used_view/<%= posts[i].db_upload_post %>'" data-spy="scroll" 
      data-target="#navbar-example2" data-offset="0">
        
        <ul class="list-group">
          <li class="list-group-data">

            <div class="row g-2">
              <div class="col-4">
                <img src="/public/image/<%= posts[i].db_upload_img %>" class="rounded-start img-fluid" alt="서적 이미지">
              </div>

              <div class="col-8" align="left">
                <div class="card-body bg-dark" style="color: aliceblue">
                  <h5 class="card-title">
                    <%= posts[i].db_upload_Name %>
                  </h5>
                  <p class="card-text">
                    <%= posts[i].db_upload_Author %>
                  </p>
                  <p class="card-text">
                    <%= posts[i].db_upload_Price %> 원
                  </p>
                </div>
              </div>
          </li>
        </ul>
      </div>
    <% } %>

    <!-- --------------------------------------------------------- -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
      <button class="btn btn-outline-light" type="button" >
        <a class="nav-link " href="/used_write">글 작성</a>
      </button>
      <!-- <button class="btn btn-outline-light" type="button">
        <a class="nav-link" href="/">로그아웃</a>
      </button> -->
    </div>
    <!-- --------------------------------------------------------- -->
  </div>

  <script src="../public/scripts/used_book.js"></script>

</body>

</html>