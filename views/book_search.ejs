      <div class="wrapper card-body bg-dark" style="color: aliceblue">
        <form id="todo-form" class="form" method="get" action="/book_search">
            <input required maxlength="10" type="text" class="form-control" style="background-color: #212529; 
            color:aliceblue" name="value" placeholder="Search">
        </form>
        
        <button type="submit" form="todo-form" style="display: none;">제출하기</button>
        
        <div class="todo-inner card-body bg-dark" style="color: aliceblue">
            <div class="allDelete off">
                <!-- <h2 class="tit">최근 검색어</h2> -->
                <span class="btn" style="background-color: aliceblue">모두 지우기 ❌</span>
            </div>
            <ul id="todo-list" style="display: flex;"></ul>
        </div>
      </div>


    </div>


    </div>

    <% for (var i=0; i < data.length; i++) { %>
      <div class="border border-white" style="max-width: 500px; margin: 10px auto;"
        onclick="location.href='http://www.yes24.com/<%=data[i].link %>'" data-spy="scroll"
        data-target="#navbar-example2" data-offset="0">
        <div class="row g-2">
          <div class="col-4">
            <img src="<%=data[i].img %>" class="rounded-start img-fluid" alt="...">
          </div>
          <div class="col-8" align="left">
            <div class="card-body bg-dark" style="color: aliceblue">
              <h5 class="card-title">
                <%=data[i].title%>
              </h5>
              <p class="card-text">
                <%=data[i].author%>
              </p>
              <p class="card-text">
                <%=data[i].price%>원
              </p>
              <p class="card-text"><small class="text-muted">
                  <%=data[i].date%>
                </small></p>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
        </script>

        <!-- Load jquery -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>

        <script src="/public/scripts/save_search.js"></script>

