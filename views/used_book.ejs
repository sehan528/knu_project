<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

  <title>중고 서적</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/public/main.css">
  <style>
    .list-group-data {
      cursor: pointer;
    }
  </style>
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous">
  </script> -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
</head>

<body class="bg-main">

  <%- include('nav2.html') %>

  <div class="main" style="min-width:400px;" align="center">

    <!-- <div class="form-group has-search" style="max-width: 400px;">
      <input type="text" id="searchBook" class="form-control card-t" placeholder="Search">
    </div> -->

    <% for (var i=0; i < posts.length; i ++) { %>

    <div class="border border-white abox" 
    style="position: relative; max-width: 400px; margin: 10px auto;" 
    onclick="location.href='/used_view/<%= posts[i].db_upload_post %>'" 
    data-spy="scroll" 
    data-target="#navbar-example2" 
    data-offset="0">

    <!-- 판매 완료 조건문 작성 -->
    <% if(posts[i].db_is_Sell != null) { %>
    <div style="position:absolute; left: 25%; margin: 20px auto;">
      <img style="width:180px; height:90px;" src="/public/image/soldout999logo9.png" alt="판매완료" >
    </div>
    <% } %>

    <button class="btn btn-outline-secondary card-t" style="width: 400px">
      <ul class="list-group">
          <div class="row g-2">
            <div class="col-4">
              <img src="/public/image/<%= posts[i].db_upload_img %>" class="rounded-start img-fluid" alt="서적 이미지">
            </div>
  
            <div class="col-8" align="left">
              <div class="card-body" >
                <h5 class="card-title">
                  <%= posts[i].db_upload_Name %>
                </h5>
                <p class="card-text">
                  <%= posts[i].db_upload_Author %>
                </p>
                <p class="card-text">
                  <%= posts[i].db_upload_Price %> 원
                </p>
              </div>
            </div>
            
      </ul>
    </button>
    </div>


    <% } %>

    <!-- --------------------------------------------------------- -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-center abox">
      <button class="btn btn-outline-secondary card-t" type="button" >
        <a class="nav-link " href="/used_write">글 작성</a>
      </button>
      <!-- <button class="btn btn-outline-light" type="button">
        <a class="nav-link" href="/">로그아웃</a>
      </button> -->
    </div>
    <!-- --------------------------------------------------------- -->
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
  </script>

  <script src="../public/scripts/used_book.js"></script>

</body>

</html>